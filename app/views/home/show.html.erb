<div class="homepage">

<!--  <h1>Homepage</h1>-->

<!--<p>Welcome, <%#= current_user.name.presence || current_user.email %></p>-->


  <turbo-frame id="tab_content" >
    <div class="tabs-bar">
      <div class="tab-wrapper"><div class="tab-clip">
        <%= link_to "Overview",
                    homepage_path(tab: "overview"),
                    data: {turbo_action: "advance", turbo_frame: "tab_content" },
                    class: "tab-selector #{'active' if @tab == 'overview'}" %>
      </div></div>
      <div class="tab-wrapper"><div class="tab-clip">
        <%= link_to "Gift Recipients",
                    homepage_path(tab: "recipients"),
                    data: {turbo_action: "advance", turbo_frame: "tab_content" },
                    class: "tab-selector #{'active' if @tab == 'recipients'}" %>
      </div></div>
      <div class="tab-wrapper"><div class="tab-clip">
        <%= link_to "Gift Lists",
                    homepage_path(tab: "lists"),
                    data: {turbo_action: "advance", turbo_frame: "tab_content" },
                    class: "tab-selector #{'active' if @tab == 'lists'}" %>
      </div></div>
      <div class="tab-wrapper"><div class="tab-clip">
        <%= link_to "Events",
                    homepage_path(tab: "events"),
                    data: {turbo_action: "advance", turbo_frame: "tab_content" },
                    class: "tab-selector #{'active' if @tab == 'events'}" %>
      </div></div>
      <div class="tab-wrapper"><div class="tab-clip">
        <%= link_to "Budgets",
                    homepage_path(tab: "budgets"),
                    data: {turbo_action: "advance", turbo_frame: "tab_content" },
                    class: "tab-selector #{'active' if @tab == 'budgets'}" %>
      </div></div>
    </div>

    <div class="homepage-content">
      <%= render @tab %>
    </div>
  </turbo-frame>


  <div style="display: flex; gap: 20px;">
    <% Gift.statuses.keys.each do |status| %>
      <div style="border: 1px solid black; padding: 10px; flex: 1;">

        <h3 style="text-transform: uppercase;"><%= status %></h3>

        <ul>
          <% if @global_gifts_status[status] %>
            <% @global_gifts_status[status].each do |gift| %>
              <li style="margin-bottom: 10px;">
                <strong><%= gift.name %></strong><br>
                <small>For: <%= gift.recipient.name %></small><br>
                <%= link_to "Edit", edit_gift_path(gift) %>
              </li>
            <% end %>
          <% else %>
            <li><em>No gifts in this stage</em></li>
          <% end %>
        </ul>

      </div>
    <% end %>
  </div>


</div>