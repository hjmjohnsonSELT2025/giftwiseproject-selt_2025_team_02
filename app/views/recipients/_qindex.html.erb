<div class="table-section">

  <h2>Your Gift Recipients</h2>



  <% if current_user.recipients.any? %>
    <table class="data-table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Relation</th>
      </tr>
      </thead>

      <tbody>
      <% current_user.recipients.each do |recipient| %>
        <tr>
          <td><%= link_to recipient.name, recipient_path(recipient), data: { turbo: false }, class: "pretty-link" %></td>
          <td><%= recipient.age %></td>
          <td><%= recipient.relation %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="empty-table">No recipients added yet.</p>
  <% end %>
  <div class="table-actions">
    <%= link_to "View All Recipients", recipients_path, data: { turbo: false }, class: "pretty-btn" %>
    <%= link_to "Add New Recipient", new_recipient_path, data: { turbo: false }, class: "pretty-btn" %>
  </div>
</div>
