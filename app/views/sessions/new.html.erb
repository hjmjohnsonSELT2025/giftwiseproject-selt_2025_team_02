<h1>Welcome to Giftwise!</h1>

<%= form_with url: login_path, method: :post, scope: :session, local: true do |f| %>
  <div>
    <%= f.label :email, "Email" %><br>
    <%= f.email_field :email, value: params.dig(:session, :email) %>
  </div>

  <div style="margin-top: 0.75rem;">
    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password %>
  </div>

  <div style="margin-top: 0.75rem; display:flex; gap:1rem; align-items:center;">
    <%= link_to "Forgot password?", "#" %>
    <%= f.submit "Log in" %>
  </div>
<% end %>

<div>
  <p>Or log in with <%= link_to "Google", "/auth/google_oauth2" %> </p>
</div>


<%= link_to "Sign Up", new_user_path  %>
