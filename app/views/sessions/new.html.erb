<div class="centered-page golden" style="--card-height: 500px">
  <div class="centered-page-card">
    <h1 >Welcome to Giftwise!</h1>

    <%= form_with url: login_path, method: :post, scope: :session, local: true do |f| %>
      <div class="login-entry">
        <%#= f.label :email, "Email" %>
        <%= f.email_field :email, value: params.dig(:session, :email), placeholder: "Email" %>
      </div>

      <div class="login-entry">
        <%#= f.label :password, "Password" %>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <div class="login-forgot-password">
        <%= link_to "Forgot password?", "#" %>
      </div>
      <div class="login-actions">
        <div class="login-btn"><%= f.submit "Log in", class: "btn" %></div>
        <div class="login-btn"><a href="/auth/google_oauth2" class="btn">Log in with Google</a></div>
      </div>



    <% end %>
    <div class="centered-page-footnote">Don't have an account?&nbsp;<%= link_to "Sign Up", new_user_path  %> </div>
  </div>
</div>
