<h1>AiSuggestions#index</h1>
<p>Find me in app/views/ai_suggestions/index.html.erb</p>

<%= form_with url: ai_suggestions_path, method: :post,data: { turbo: false } do |form| %>
  <%= form.label :message, "Get a Gift suggestion:" %>
  <%= form.text_field :message %>
  <%= form.submit "Send", data: { disable_with: "thinking... " },
                  style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px;" %> %>
<% end %>

<% if @response %>
  <div style="margin-top: 20px; padding: 10px; border: 1px solid #ccc;">
    <strong>AI Says you should buy:</strong>
    <p><%= @response %></p>
  </div>
<% end %>