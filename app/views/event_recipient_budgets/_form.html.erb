<%= form_with(model: @event_recipient_budget, local: true) do |form| %>
  <% if @event_recipient_budget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_recipient_budget.errors.count, "error") %> prohibited this budget from being saved:</h2>
      <ul>
        <% @event_recipient_budget.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :event_id, "Event" %><br>
    <%= form.collection_select :event_id, @events, :id, :name, prompt: "Select an event" %>
  </div>

  <div class="field">
    <%= form.label :recipient_id, "Recipient" %><br>
    <%= form.collection_select :recipient_id, @recipients, :id, :name, prompt: "Select a recipient" %>
  </div>

  <div class="field">
    <%= form.label :total_budget %><br>
    <%= form.number_field :total_budget, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :spent_budget %><br>
    <%= form.number_field :spent_budget, step: 0.01 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
